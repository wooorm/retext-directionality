{
  "name": "retext-directionality",
  "version": "0.1.2",
  "description": "Detect directionality (left-to-right, right-to-left) in Retext",
  "license": "MIT",
  "keywords": [
    "directionality",
    "rtl",
    "ltr",
    "retext"
  ],
  "dependencies": {
    "direction": "^0.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wooorm/retext-directionality.git"
  },
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "devDependencies": {
    "eslint": "^0.8.0",
    "istanbul": "^0.3.0",
    "jscs": "^1.6.0",
    "mocha": "^1.20.0",
    "retext": "^0.2.0-rc.2",
    "retext-content": "^0.2.2",
    "retext-visit": "^0.1.1"
  },
  "scripts": {
    "test": "node_modules/.bin/_mocha --reporter spec --check-leaks -u exports spec/retext-directionality.spec.js",
    "test-travis": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha --report lcovonly -- --reporter spec --check-leaks -u exports spec/retext-directionality.spec.js",
    "lint": "npm run-script lint-api && npm run-script lint-test && npm run-script lint-style",
    "lint-api": "node_modules/.bin/eslint index.js --env node --env browser --rule 'quotes: [2, single]'",
    "lint-test": "node_modules/.bin/eslint spec/retext-directionality.spec.js --env node --env mocha --rule 'quotes: [2, single], no-loop-func: false'",
    "lint-style": "node_modules/.bin/jscs index.js spec/retext-directionality.spec.js --reporter=inline",
    "coverage": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- -- spec/retext-directionality.spec.js",
    "make": "npm run-script lint && npm run-script coverage"
  }
}
